{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "settings": {
      "import/extensions": [".js",".jsx",".ts",".tsx"],
      "import/parsers": {
          "@typescript-eslint/parser": [".ts",".tsx"]
      },
      "import/resolver": {
          "node": {
              "extensions": [".js",".jsx",".ts",".tsx"]
          }
      }
  },
  "rules": {
      "max-len": ["error", 200],
      "for-direction": "off",
      "no-plusplus": "off",
      "import/no-extraneous-dependencies": "off",
      "no-unused-expressions": "off",
      "import/no-unresolved": "off",
      "import/prefer-default-export": "off",
      "import/extensions": [
          "error",
          "ignorePackages",
          {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
          }
      ]
  }
}
